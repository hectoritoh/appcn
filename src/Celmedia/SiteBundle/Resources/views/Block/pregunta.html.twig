


<div id="cuestionario" class="row" style="display:none;">

    <div class="col-md-8 col-md-offset-2">
        <form id="trivia" method="post">

            {#{% for opcion in trivia %}#}

            {% for pregunta in encuesta %}		
                <div class="preguntas preguntas-desktop" style="{% if loop.index > 1 %} display:none; {% endif %} ">
                    <h1 class="titulo-encuesta titulo-encuesta-desktop"> {{ loop.index }}) {{ pregunta.pregunta }}</h1><br />

                    <div class="col-md-8" style="">

                        {% for respuesta in pregunta.respuestas %}
                            <div class="respuesta">
{#                                <input type="radio" id="{{  respuesta.id }}" name="respuesta" value="" onclick="contestar( {{ pregunta.id }} , {{  respuesta.id }} , this)"/><label for="{{  respuesta.id }}"><span></span> {{ respuesta.respuesta  }}</label>#}
                            </div>

                            <br />

                        {% endfor %}

                    </div>


                </div>


            {% endfor %}

            {#{% endfor %}#}


            <div class="col-md-4">		
                <div class="cronometro img-responsive">
                    <!-- <p style="font-size:12px; color:#fff;margin-bottom:0px;">Pregunta 1</p> -->
                    <span id="minutes">00</span>:<span id="seconds">00</span>
                </div>
                <!-- <button onclick="timer()">Start</button>
                <button onclick="clearTimer()">Stop</button> -->
            </div>
        </form>



    </div>

</div>
